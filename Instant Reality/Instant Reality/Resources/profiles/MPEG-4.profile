<profile name='MPEG-4' title='MPEG-4 Interactive profile' specUrl='http://www.web3d.org/x3d/specifications/ISO-IEC-19775-1.2-X3D-AbstractSpecification/Part01/MPEG4interactive.html'>
  <component name='Core' level='1'/>
